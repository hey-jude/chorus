<div class="general_data_source_fields">
    <div>
        <label class="required" for="name-{{name}}">{{t "data_sources.dialog.data_source_name"}}</label>
        <input type="text" id="name-{{name}}" name="name" maxlength="64" value="{{name}}" tabindex="1"/>
    </div>

    <div>
        <label for="description-{{name}}">{{t "data_sources.dialog.description"}}</label>
        <textarea id="description-{{name}}" name="description" rows="3" maxlength="4095" tabindex="2">{{description}}</textarea>
    </div>
</div>