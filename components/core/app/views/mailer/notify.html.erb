      <% @job_task_results.each do |result| %>
      
<table class="taskTable">
  <tbody>
  <tr>
      <td class="taskIdentifier">
        <%= image_tag attachments[as_png(result.class.name)].url, alt: 'Task', class: 'icon' -%>
      </td>
      <td class="taskName">
        <%= result.name -%>
      </td>
        <td class="taskStart">
        <%= result.started_at -%>
      </td>
      <td class="taskFinished">
        <%= result.finished_at -%>
      </td>
      <td class="taskStatus">
        <% if result.status == 'success' %>
            Completed
        <% else %>
            Failed
        <% end %>
      </td>

  </tr>
  </tbody>
</table>


