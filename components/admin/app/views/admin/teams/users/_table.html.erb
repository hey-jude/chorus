<div class="chorus-box no-border">
  <div class="box-header">
    <h3 class="box-title"><%= pluralize(@team_users.count, "Member") %></h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

      <div class="row">
        <div class="col-sm-12 no-padding">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <tbody>
            <tr>
              <th>Avatar</th>
              <th>Full Name</th>
              <th>Username</th>
              <th>Email Address</th>
            </tr>
            <%= render partial: "admin/teams/users/table_row" , collection: @team_users , as: :user %>
            <tr id="new_row" style="hidden:true"></tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="dataTables_paginate paging_simple_numbers" style="float:right">
        <%= page_entries_info @team_users %>
        <%= will_paginate @team_users, :class => 'digg_pagination', param_name: 'users_page' %>
      </div>
    </div>
  </div><!-- /.box-body -->
</div>