<div class="modal fade" id="newTeam" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span class="fa fa-times close_image"></span>
          </button>
          <h1 class="modal-title">Create a New Team</h1>
        </div>
        <%= form_for @group, url: admin.teams_path , remote: true do |f| %>
        <div class="modal-body">
          <div class="box-body">

            <div class="form-group">
              <label for="">Name</label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <label for="">Description</label>
              <%= f.text_area :description, class: "form-control" , size: "3x6" %>
            </div>
            <div class="form-group">
              <label for="">Team Image</label>
              <%= f.file_field :avatar, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
           <button type="button" class="modalish cancel" data-dismiss="modal">Cancel</button>
           <%= f.submit "Create Team" , class: "btn btn-primary" %>
        </div>
        <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
