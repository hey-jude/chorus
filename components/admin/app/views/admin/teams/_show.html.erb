<div class="chorus-box">
  <div class="box-header">
    <%= image_tag @team.avatar.url(:icon) %>
    <h3 class="box-title"><%= team.name%></h3>
    <h4> <%= team.description%> </h4>
  </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-md-12 no-padding">
        <div id="team_users_table">
          <%= render partial: "admin/teams/users/table" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 no-padding">
        <div id="team_roles_table">
          <%= render partial: "admin/teams/roles/table" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 no-padding">
        <div id="team_workspaces_table">
          <%= render partial: "admin/teams/workspaces/table" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 no-padding">
        <div id="team_scopes_table">
          <%= render partial: "admin/teams/scopes/table" %>
        </div>
      </div>
    </div>
  </div>
 </div>
