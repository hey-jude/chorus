{{#if resource}}
    <div class="info">
        {{#if showVersions}}
			<a class="version_list" href="#"><span class="chosen">{{t "workfile.version_title" versionNum=versionInfo.versionNum}}</span></a>
        {{/if}}
    </div>
    <div class="actions">
        <label>
            {{#if inWorkfile}}
                {{t "sidebar.workfile_actions"}}
            {{else}}
                {{t "sidebar.selected.one"}}
            {{/if}}
        </label>
        <ul>
            {{#if showRunWorkflow}}
                {{#unless isRunning}}
                    <li><a class="run_now" href="#">{{t 'work_flows.actions.run_now'}}</a></li>
                    <li><span class="stop disabled" href="#">{{t 'work_flows.actions.stop'}}</span></li>
                {{else}}
                    <li><span class="disabled run_now">{{t 'work_flows.actions.run_now'}}</span></li>
                    <li><a class="stop" href="#">{{t 'work_flows.actions.stop'}}</a></li>
                {{/unless}}

            {{/if}}
            {{#if showCreateWorklet}}
                <li><a href="#" class="create_worklet">Create Worklet</a></li>
            {{/if}}
            {{#if showAddNoteLink}}
                <li><a class="new_note dialog-launch" href="#">{{t "actions.add_note"}}</a></li>
            {{/if}}
            <li><a class="edit_tags" href="#">{{t "sidebar.edit_tags"}}</a></li>
            {{#if showEditLinks}}<li><a class="rename" href="#">{{t "actions.rename"}}</a></li>{{/if}}
            {{#if showCopyLink}}
                <li><a href="#" class="copy dialog-launch">{{t "actions.copy_workfile"}}</a></li>
            {{/if}}
            {{#if showDownloadLink}}
                <li><a href="{{downloadUrl}}" class="download">{{t "actions.download"}}</a></li>
            {{/if}}
            {{#if showEditLinks}}
                <li><a href="#" class="delete alert-launch">{{t "workfile.delete.button"}}</a></li>
            {{/if}}
            {{#if showPublishWorklet}}
                <li><a href="#" class="publish">Publish Worklet</a></li>
            {{/if}}
            {{#if showUnpublishWorklet}}
                <li><a href="#" class="unpublish">Unpublish Worklet</a></li>
            {{/if}}
        </ul>
    </div>

    <div class="tab_control"></div>
{{/if}}