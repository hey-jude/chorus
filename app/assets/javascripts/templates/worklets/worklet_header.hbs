<div class="worklet_title">
    <img src="{{iconUrl}}" class="icon" alt="worklet"/>

    <div class="item_information">
        <h1 title="{{fileName}}">{{fileName}}</h1>
    </div>
</div>

<div class="menus">
    {{#if editing}}
        {{#if saving}}
            <div class="spinner_div">
                <span class='loading_spinner'></span> Saving...
            </div>
        {{else}}
            <button class="submit modalish save" data-event-type="save">Save</button>
        {{/if}}
    {{/if}}

    <button class="modalish close" data-event-type="close">Close</button>

    <a href="#" class="menu_launcher"><span>Actions<span class="fa fa-caret-down caret"></span></span></a>

    <div class="menu popup_worklet_menu hidden">
        <ul>
            <li class="underline">
                <a href="#" class="menu_item" data-event-type="menu item data">
                    Menu Item
                </a>
            </li>
        </ul>
    </div>
</div>